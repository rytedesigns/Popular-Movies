<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/popular_movies_blue</item>
        <item name="colorPrimaryDark">@color/popular_movies_dark_blue</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MoviesTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.ProminentMotionPictures.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme"></style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.ProminentMotionPictures.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <!-- Style for movie gridveview -->
    <style name="MoviesGridStyle"></style>

</resources>
